{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://thecourt.local/schemas/decision_parse.schema.json",
  "title": "DecisionParseOutput",
  "type": "object",
  "additionalProperties": false,
  "required": ["task_id", "intent_summary", "proposed_bundles"],
  "properties": {
    "task_id": { "type": "string", "format": "uuid" },
    "intent_summary": { "type": "string", "minLength": 1 },
    "proposed_bundles": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": { "$ref": "#/$defs/action_bundle" }
    },
    "clarifying_questions": { "type": "array", "items": { "type": "string" }, "default": [] },
    "assumptions": { "type": "array", "items": { "type": "string" }, "default": [] }
  },
  "$defs": {
    "action": { "$ref": "./action.schema.json" },
    "action_bundle": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "actions"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "actions": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "./action.schema.json" }
        },
        "tradeoffs": { "type": "array", "items": { "type": "string" }, "default": [] }
      }
    }
  }
}

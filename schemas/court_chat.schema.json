{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://thecourt.local/schemas/court_chat.schema.json",
  "title": "CourtChatOutput",
  "type": "object",
  "additionalProperties": false,
  "required": ["task_id", "messages"],
  "properties": {
    "task_id": { "type": "string", "format": "uuid" },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/message" }
    }
  },
  "$defs": {
    "message": {
      "type": "object",
      "additionalProperties": false,
      "required": ["speaker_character_id", "content"],
      "properties": {
        "speaker_character_id": { "type": "string", "format": "uuid" },
        "content": { "type": "string", "minLength": 1 }
      }
    }
  }
}

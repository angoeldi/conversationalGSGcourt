{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://thecourt.local/schemas/claims.schema.json",
  "title": "CourtierMessage",
  "type": "object",
  "additionalProperties": false,
  "required": ["content"],
  "properties": {
    "thread_id": { "type": "string", "format": "uuid" },
    "task_id": { "type": "string", "format": "uuid" },
    "sender_character_id": { "type": "string", "format": "uuid" },
    "content": { "type": "string", "minLength": 1 },
    "claims": {
      "type": "array",
      "items": { "$ref": "#/$defs/claim" },
      "default": []
    },
    "recommendation_hint": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "suggested_action_types": { "type": "array", "items": { "type": "string" }, "default": [] },
        "urgency": { "type": "string", "enum": ["low", "medium", "high"] }
      }
    }
  },
  "$defs": {
    "value": { "oneOf": [{ "type": "string" }, { "type": "number" }, { "type": "boolean" }] },
    "claim": {
      "type": "object",
      "additionalProperties": false,
      "required": ["subject", "predicate", "value", "confidence", "epistemic_status"],
      "properties": {
        "claim_id": { "type": "string", "format": "uuid" },
        "subject": { "type": "string", "minLength": 1 },
        "predicate": { "type": "string", "minLength": 1 },
        "value": { "$ref": "#/$defs/value" },
        "unit": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "epistemic_status": { "type": "string", "enum": ["asserted", "speculated", "rhetorical"] },
        "fact_id": { "type": "string" },
        "source_hint": { "type": "string" }
      }
    }
  }
}

# Provider selection
# OPENAI is the reference provider. GROQ is OpenAI-Responses-compatible. OPENROUTER uses Chat Completions.
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_BUILDER_PROVIDER=openai
LLM_BUILDER_MODEL=gpt-4o

# OpenAI
OPENAI_API_KEY=
OPENAI_BASE_URL=

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-4o-mini

# Groq
GROQ_API_KEY=
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_MODEL=openai/gpt-oss-20b

# Hugging Face (optional) for portrait generation / diffusion endpoints
HF_API_KEY=
HF_INFERENCE_URL=https://router.huggingface.co/hf-inference/models/black-forest-labs/FLUX.1-schnell

# Postgres
DATABASE_URL=postgres://postgres:postgres@localhost:5432/thecourt

# Server
PORT=8787
SCENARIO_BUILDER_ENABLED=false
